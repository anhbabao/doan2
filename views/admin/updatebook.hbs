<form class="form-horizontal" action="/admin/book/update" method="post">
    <fieldset>

        <!-- Form Name -->
        <legend>Cập nhật sách</legend>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="product_id">ID</label>
            <div class="col-md-4">
                <input id="product_id" name="idbook" placeholder="ID Sách" value="{{book.idbook}}"
                    class="form-control input-md" required="" type="text" disabled>
                <input name="idbook" placeholder="ID Sách" value="{{book.idbook}}" hidden>
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="product_name">Tên sách</label>
            <div class="col-md-4">
                <input id="product_name" name="name" placeholder="Tên Sách" class="form-control input-md" required=""
                    type="text" value="{{book.name}}">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="product_name_fr">Tác giả</label>
            <div class="col-md-4">
                <input id="product_name_fr" name="author" placeholder="Tên tác giả" class="form-control input-md"
                    required="" type="text" value="{{book.author}}">

            </div>
        </div>

        <!-- Select Basic -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="product_categorie">Thể loại</label>
            <div class="col-md-4">
                <select id="idcategory" name="idcategory" class="form-control" value="{{book.idcategory}}">
                    <option value="tn">Thiếu nhi</option>
                    <option value="kt">Kinh tế</option>
                    <option value="tl">Tâm lý</option>
                    <option value="vh">Văn học</option>
                </select>
            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="available_quantity">Số lượng</label>
            <div class="col-md-4">
                <input id="available_quantity" name="number" placeholder="Số lượng" value="100"
                    class="form-control input-md" required="" type="text" value="{{book.number}}">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="product_weight">Ngày xuất bản</label>
            <div class="col-md-4">
                <input id="product_weight" name="publishdate" placeholder="2022/05/26" value="{{book.publishdate}}"
                    class="form-control input-md" required="" type="text">

            </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="product_weight">Trạng thái</label>
            <div class="col-md-4">
                <input id="product_weight" name="status" placeholder="Trạng thái" value="{{book.status}}"
                    class="form-control input-md" required="" type="text">

            </div>
        </div>

        <!-- Textarea -->
        <div class="form-group">
            <label class="col-md-4 control-label" for="product_description">Mô tả sách</label>
            <div class="col-md-4">
                <textarea class="form-control" id="product_description" name="description"
                    value="">{{book.description}}</textarea>
            </div>
        </div>


        <!-- Text input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="stock_alert">Giá</label>
            <div class="col-md-4">
                <input id="stock_alert" type="number" name="price" placeholder="Giá" class="form-control input-md"
                    required="" type="text" value="{{book.price}}">

            </div>
        </div>

        <!-- Search input-->
        <div class="form-group">
            <label class="col-md-4 control-label" for="stock_critical">Link hình ảnh</label>
            <div class="col-md-4">
                <input id="stock_critical" name="imgurl" placeholder="URL hình ảnh" class="form-control input-md"
                    required="" value="{{book.imgurl}}">

            </div>
        </div>


        <!-- Text input-->
        <div class="form-group">

            <!-- Button -->
            <div class="form-group">
                <div class="col-md-4">
                    <button type="submit" id="singlebutton" name="singlebutton" class="btn btn-primary">Cập
                        nhật</button>
                </div>
            </div>

    </fieldset>
</form>