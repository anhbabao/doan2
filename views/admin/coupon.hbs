<div class="row my-4">
    <div class="card mb-4">
        <div class="card-header pb-0">
            <h6>Đơn hàng gần đây</h6>
            <a class="btn bg-gradient-primary mt-3 w-100" href="/admin/coupon/add">Thêm mã</a>
        </div>
        <div class="card-body px-0 pt-0 pb-2">
            <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                    <thead>
                        <tr>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                #Code</th>
                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                Giảm(%)</th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                Ngày bắt đầu
                            </th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                Ngày kết thúc
                            </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        {{#each coupons}}
                        <tr>
                            <td>
                                <div class="d-flex px-2 py-1">

                                    <h6 class="mb-0 text-sm">{{this.code}}
                                    </h6>

                                </div>
                            </td>
                            <td class=" text-center">
                                <span class="badge badge-sm bg-gradient-success">{{percentDiscount this.percent}}</span>
                            </td>
                            <td class="text-center">
                                <p class="text-xs font-weight-bold mb-0">{{getDate this.startday}}</p>

                            </td>
                            <td class="text-center">
                                <p class="text-xs font-weight-bold mb-0">{{getDate this.endday}}</p>

                            </td>

                            <td class="align-middle">
                                <a href="/admin/coupon/{{this.code}}" class="text-secondary font-weight-bold text-xs"
                                    data-toggle="tooltip" data-original-title="Edit user">
                                    Cập nhật
                                </a>
                            </td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>