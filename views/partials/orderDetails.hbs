<div class="container">


    <div class="row">
        <h2>Chi tiết đơn hàng #{{order.[0].idorder}}</h2>
        <div class="col-lg-12">
            <div class="shoping__cart__table">
                <table>
                    <thead>
                        <tr>
                            <th class="shoping__product">Products</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each order}}
                        <tr>
                            <form action="/cart/delete" method="post">
                                {{!-- <input type="text" hidden name="id" value="{{this.idbook}}"> --}}
                                <td class="shoping__cart__item">
                                    <img src="{{this.imgurl}}" alt="" width="100px" height="100px">
                                    <h5>{{this.name}}</h5>
                                </td>
                                <td class="shoping__cart__price">
                                    {{this.priceFormat}}
                                </td>
                                <td class="shoping__cart__quantity">
                                    <div class="quantity">
                                        <div class="pro-qty-cart">
                                            <input type="text" value="{{this.quantity}}" disabled>
                                        </div>
                                    </div>
                                </td>
                                <td class="shoping__cart__total">
                                    {{priceTimeQuantity this.price this.quantity}}
                                </td>

                            </form>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            {{!-- <div class="shoping__cart__btns">
                <a href="#" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                <a href="#" class="primary-btn cart-btn cart-btn-right"><span class="icon_loading"></span>
                    Upadate Cart</a>
            </div> --}}
        </div>
        <div class="col-lg-6">
            <div class="shoping__continue">
                <div class="shoping__discount">
                    <h5>Mã giảm giá</h5>
                    <form action="/cart/coupon" method="post">
                        <input type="text" name="code" placeholder="Không có mã giảm giá" value="{{discount.code}}"
                            disabled>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="shoping__checkout">
                <h5>Cart Total</h5>
                <ul>
                    <li>Subtotal <span>{{total order false}}</span></li>
                    {{#if discount.percent}}
                    <li>Coupon <span>{{discountFormat order discount.percent}}</span></li>
                    {{/if}}
                    <li>Total <span>{{total order discount.percent}}</span></li>
                </ul>
                <div class="alert alert-light" role="alert">
                    Thông tin giao hàng là thông tin trong phần cá nhân!
                </div>
            </div>
        </div>
    </div>
</div>